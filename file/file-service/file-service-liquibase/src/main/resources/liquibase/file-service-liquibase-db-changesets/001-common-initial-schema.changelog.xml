<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                   xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
                   xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
         http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.3.xsd">

    <changeSet
            id="001-common-initial-schema.changelog"
            author="TechPod">

        <createTable tableName="file">
            <column name="file_id" type="UUID">
                <constraints primaryKey="true" nullable="false"/>
            </column>

            <column name="content" type="BLOB">
                <constraints nullable="false"/>
            </column>

        </createTable>
        <createTable tableName="metadata">
            <column name="metadata_id" type="UUID">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="file_id" type="UUID">
                <constraints foreignKeyName="fk_file_id" nullable="false"/>
            </column>
        </createTable>

        <addUniqueConstraint tableName="metadata"
                             columnNames="metadata_id"
                             constraintName="metadata_id_constraint"/>
        <addUniqueConstraint tableName="file"
                             columnNames="file_id"
                             constraintName="file_id_constraint"/>
        <addForeignKeyConstraint
                constraintName="fk_file_id"
                baseColumnNames="file_id"
                baseTableName="metadata"
                referencedColumnNames="file_id"
                referencedTableName="file"/>

    </changeSet>

</databaseChangeLog>
