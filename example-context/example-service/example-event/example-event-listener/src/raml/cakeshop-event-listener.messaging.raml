#%RAML 0.8
title: API Using media type in the URL
baseUri: message://event/listener/message/cakeshop
version: v1
/cakeshop.event:
  post:
    body:
        application/vnd.cakeshop.events.recipe-added+json:
            schema: !include json/schema/cakeshop.events.recipe-added.json
            example: !include json/add-recipe.json

        application/vnd.cakeshop.events.recipe-added-transacted+json:
            schema: !include json/schema/cakeshop.events.recipe-added-transacted.json
            example: !include json/add-recipe-transacted.json

        application/vnd.cakeshop.event.cake-made+json:
            schema: !include json/schema/cakeshop.event.cake-made.json
            example: !include json/make-cake.json