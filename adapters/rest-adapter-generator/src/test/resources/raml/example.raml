#%RAML 0.8
title: Example Service
baseUri: http://localhost:8080/rest-adapter-generator/query/api/rest/example
version: v0.1
mediaType: application/json
protocols: [ HTTP, HTTPS ]

/users/{userId}:
  description: |
    Create user or Update user
  post:
    body:
        application/vnd.people.commands.create-user+json:
            schema: !include json/schema/create-user.json
            example: !include json/create-user.json
        application/vnd.people.commands.update-user+json:
            schema: !include json/schema/update-user.json
            example: !include json/update-user.json
  get:
    responses:
        200:
            body:
                application/vnd.people.queries.get-user+json:
                application/vnd.people.queries.get-user2+json:

/users:
  description: |
    Search users
  get:
    queryParameters:
        surname:
            type: string
    responses:
        200:
            body:
                application/vnd.people.queries.search-users+json:
