{
  "$id": "http://example.com/example.json",
  "$schema": "http://json-schema.org/draft-04/schema#",
  "type": "object",
  "definitions": {
    "withDefault": {
      "type": "object",
      "properties": {
        "name": {
          "$id": "/properties/name",
          "type": "string"
        },
        "defaultEventSource": {
          "$id": "/properties/defaultEventSource",
          "type": "boolean"
        },
        "location": {
          "$id": "/properties/location",
          "type": "object",
          "properties": {
            "jms_uri": {
              "$id": "/properties/location/jms_uri",
              "type": "string"
            },
            "rest_uri": {
              "$id": "/properties/location/rest_uri",
              "type": "string"
            },
            "data_source": {
              "$id": "/properties/location/data_source",
              "type": "string"
            }
          },
          "required": [
            "jms_uri",
            "rest_uri",
            "data_source"
          ]
        }
      },
      "required": [
        "name",
        "defaultEventSource",
        "location"
      ],
      "uniqueItems": true,
      "additionalProperties": false
    },
    "withoutDefault": {
      "type": "object",
      "properties": {
        "name": {
          "$id": "/properties/name",
          "type": "string"
        },
        "location": {
          "$id": "/properties/location",
          "type": "object",
          "properties": {
            "jms_uri": {
              "$id": "/properties/location/jms_uri",
              "type": "string"
            },
            "rest_uri": {
              "$id": "/properties/location/rest_uri",
              "type": "string"
            },
            "data_source": {
              "$id": "/properties/location/data_source",
              "type": "string"
            }
          },
          "required": [
            "jms_uri",
            "rest_uri"
          ]
        }
      },
      "required": [
        "name","location"
      ],
      "not": {
        "required": [
          "defaultEventSource"
        ]
      },
      "uniqueItems": true,
      "additionalProperties": false
    }
  },
  "properties": {

    "event_sources": {
      "type": "array",
      "items": [
        {
          "$ref": "#/definitions/withDefault"
        }
      ],
      "additionalItems": {
        "$ref": "#/definitions/withoutDefault"
      }
    }
  },
  "required": [
    "event_sources"
  ]
}